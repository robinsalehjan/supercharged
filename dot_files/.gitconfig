
[user]
	name = Robin Saleh-Jan
	email = robinsalehjan@users.noreply.github.com
[credential]
	helper = osxkeychain
[core]
	editor = code --wait
	excludesfile = .gitignore_global
[push]
	default = tracking
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	logp = log --pretty=oneline
	logn = log --name-status
	c = checkout
	d = diff
[help]
	autocorrect = 1
[merge]
	tool = vscode
[pull]
	rebase = true
[init]
	defaultBranch = main
[rerere]
	enabled = true
[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
[diff]
  tool = vscode
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
