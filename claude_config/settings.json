{
  "permissions": {
    "allow": [
      "Bash(curl -s https://raw.githubusercontent.com/carloscuesta/gitmoji/master/packages/gitmojis/src/gitmojis.json)",
      "Bash(gh --version)",
      "Bash(gh auth status)",
      "Bash(gh pr list:*)",
      "Bash(gh pr list --head:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh run list:*)",
      "Bash(gh workflow run feature_branch_distribute.yml:*)",
      "Bash(git branch --show-current)",
      "Bash(git log:*)",
      "Bash(which gh)",
      "Read",
      "Skill(distribute)",
      "Bash(git check-ignore:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git worktree:*)",
      "Bash(git submodule:*)",
      "Bash(git ls-tree:*)",
      "Bash(git mv:*)",
      "Bash(test:*)",
      "Bash(git show:*)",
      "Bash(git config:*)",
      "Bash(git -C /Users/rsj/Repositories/superlego status)",
      "Bash(git -C /Users/rsj/Repositories/superlego log --oneline -5)",
      "Bash(git -C /Users/rsj/Repositories/superlego log --oneline -10)",
      "Bash(ls:*)",
      "Bash(xargs:*)",
      "Bash(git checkout:*)",
      "Bash(python3:*)",
      "Bash(chmod:*)",
      "Bash(git restore:*)"
    ],
    "deny": [
      "Bash(rm -rf :*)",
      "Bash(sudo :*)",
      "Read(.env*)"
    ],
    "defaultMode": "default"
  },
  "model": "sonnet",
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); cwd=$(echo \"$input\" | jq -r '.workspace.current_dir'); user=$(whoami); dir=$(basename \"$cwd\"); branch=$(git -C \"$cwd\" branch --show-current 2>/dev/null || echo ''); git_info=''; [ -n \"$branch\" ] && git_info=\" (git:$branch)\"; remaining=$(echo \"$input\" | jq -r '.context_window.remaining_percentage // empty'); ctx_info=''; [ -n \"$remaining\" ] && ctx_info=\" [ctx:${remaining}%]\"; printf \"\\033[36m%s\\033[0m:\\033[34m%s\\033[0m%s%s\" \"$user\" \"$dir\" \"$git_info\" \"$ctx_info\""
  },
  "enabledPlugins": {
    "hookify@claude-plugins-official": true,
    "superpowers@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true,
    "skills@superlego": true,
    "safety-hooks@superlego": true,
    "code-simplifier@claude-plugins-official": true,
    "firebase@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "claude-code-setup@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true
  }
}
